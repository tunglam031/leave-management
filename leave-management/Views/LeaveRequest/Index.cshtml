@model AdminLeaveRequestViewVM

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<div class="row">
    <div class="col-md-3">
        <div class="card" style="width: 18rem;">
            <div class="card-body text-center">
                <h5 class="card-title">@Model.TotalRequests</h5>
                <h5 class="card-text">@Html.DisplayNameFor(model => model.TotalRequests)</h5>

            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card" style="width: 18rem;">
            <div class="card-body text-center">
                <h5 class="card-title text-warning">@Model.PendingRequests</h5>
                <h5 class="card-text">@Html.DisplayNameFor(model => model.TotalRequests)</h5>

            </div>
        </div>
    </div>
    <div class="col-md-3"> 
        <div class="card" style="width: 18rem;">
            <div class="card-body text-center">
                <h5 class="card-title text-success">@Model.ApproveRequests</h5>
                <h5 class="card-text">@Html.DisplayNameFor(model => model.TotalRequests)</h5>

            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card" style="width: 18rem;">
            <div class="card-body text-center">
                <h5 class="card-title text-danger">@Model.RejectedRequests</h5>
                <h5 class="card-text">@Html.DisplayNameFor(model => model.TotalRequests)</h5>

            </div>
        </div>
    </div>
</div>
<br />
<br />

<hr />
<h1>Leave Request Log</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Employee Name
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Leave Type
            </th>
            <th>
                Date Requested
            </th>
            <th>
                Approval Status
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LeaveRequests)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RequestingEmployee.FirstName) @Html.DisplayFor(modelItem => item.RequestingEmployee.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LeaveType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateRequested)
                </td>

                <td>
                    @if (item.Approved == true)
                    {
                        <span class="badge badge-success">Approved</span>
                    }
                    else if(item.Approved ==false)
                    {
                        <span class="badge badge-danger">Rejected</span>
                    }
                    else
                    {
                        <span class="badge badge-warning">Pending</span>
                    }
                </td> 

                <td>
                    
                    <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">
                        <i class="fa fa-file"></i>Review
                    </a> 
                    
                </td>
            </tr>
        }
    </tbody>
</table>